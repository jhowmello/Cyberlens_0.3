# Database
DATABASE_URL="postgresql://username:password@localhost:5432/cyberlens?schema=public"

# JWT Configuration
JWT_SECRET="your-super-secret-jwt-key-here"
JWT_EXPIRES_IN="7d"
JWT_REFRESH_SECRET="your-super-secret-refresh-key-here"
JWT_REFRESH_EXPIRES_IN="30d"

# Google OAuth
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"
GOOGLE_CALLBACK_URL="http://localhost:3000/auth/google/callback"

# Email Configuration
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-password"
FROM_EMAIL="noreply@cyberlens.com"

# Application
PORT=3000
NODE_ENV="development"
FRONTEND_URL="http://localhost:3001"

# Rate Limiting
RATE_LIMIT_TTL=60000
RATE_LIMIT_LIMIT=100

# Security
BCRYPT_ROUNDS=12
CORS_ORIGIN="http://localhost:3001"

# Database Protection
DATABASE_PROTECTION_ENABLED=true
ALLOW_DATABASE_CLEANUP=false
DATABASE_OPERATION_TOKEN="your-super-secret-database-token-here"

# File Upload
MAX_FILE_SIZE=5242880
UPLOAD_PATH="./uploads"

# Monitoring
MONITORING_INTERVAL=30000
ALERT_RETENTION_DAYS=30

# Logging
LOG_LEVEL="info"
LOG_FILE="logs/app.log"